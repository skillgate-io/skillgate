{
  "version": 1,
  "description": "Public export guardrail policy for open-core release packaging.",
  "deny": [
    "skillgate/core/analyzer/rules/**",
    "skillgate/core/scorer/weights.py",
    "skillgate/core/gateway/top_guard.py",
    "tests/defense/**",
    "tests/fixtures/injection_corpus_v1.jsonl",
    "docs/SECURITY-HARDENING-SPRINT.md",
    "docs/IMPLEMENTATION-PLAN.md",
    "docs/initial-requirements-discussion.txt"
  ],
  "allow_exceptions": [
    "skillgate/core/analyzer/rules/community/**",
    "skillgate/core/analyzer/rules/__init__.py",
    "skillgate/core/analyzer/rules/base.py"
  ],
  "scan": {
    "use_git_tracked_files": true,
    "include_globs": [
      "skillgate/cli/**",
      "skillgate/ci/**",
      "skillgate/core/models/**",
      "skillgate/core/signer/**",
      "web-ui/**",
      "docs/open-core/**",
      "scripts/release/check_public_export.py",
      "scripts/quality/**",
      "scripts/install/**",
      "scripts/build/**",
      "npm-shim/package.json",
      ".github/workflows/npm-shim-release.yml",
      "docs/install-spec.json",
      "CHANGELOG.md",
      "README.md",
      "pyproject.toml",
      ".github/workflows/ci.yml"
    ],
    "ignore_globs": [
      ".git/**",
      ".venv/**",
      "venv/**",
      "__pycache__/**",
      ".pytest_cache/**",
      ".mypy_cache/**",
      ".next/**",
      "node_modules/**"
    ]
  }
}
