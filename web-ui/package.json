{
  "name": "skillgate-web",
  "version": "1.0.0",
  "private": true,
  "description": "SkillGate â€” Agent Skill Security Governance marketing site",
  "scripts": {
    "dev": "next dev",
    "clean": "rm -rf .next out",
    "build": "next build",
    "start": "next start -p 3000",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:a11y:axe": "playwright test e2e/a11y.spec.ts --project=chromium",
    "test:a11y:pa11y": "./scripts/run-pa11y.sh",
    "test:a11y": "npm run test:a11y:axe && npm run test:a11y:pa11y",
    "lighthouse": "lhci autorun",
    "docs:lint:links": "node scripts/check-doc-links.mjs",
    "docs:lint:snippets": "node scripts/check-doc-snippets.mjs",
    "docs:lint:markdown": "node scripts/lint-markdown.mjs",
    "docs:api:sync": "node scripts/generate-api-docs.mjs",
    "docs:api:check": "node scripts/check-api-docs-sync.mjs",
    "docs:check": "npm run docs:lint:markdown && npm run docs:lint:links && npm run docs:lint:snippets && npm run docs:api:check",
    "analyze": "ANALYZE=true next build",
    "check": "npm run lint && npm run type-check && npm run test && npm run docs:check"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.21",
    "clsx": "^2.1.0",
    "next": "^14.2.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "@lhci/cli": "^0.13.0",
    "@next/bundle-analyzer": "^14.2.0",
    "@playwright/test": "^1.43.0",
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^14.2.0",
    "@types/node": "^20.11.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^5.1.4",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "jsdom": "^24.0.0",
    "postcss": "^8.4.0",
    "prettier": "^3.2.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.4.0",
    "vitest": "^1.6.0"
  }
}
