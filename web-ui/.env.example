# Environment variables (copy to .env.local and fill in)

# API endpoint for the SkillGate hosted backend
NEXT_PUBLIC_API_URL=https://api.skillgate.io/api/v1

# 16.17: Analytics endpoint (optional â€” events are dropped silently if unset)
NEXT_PUBLIC_ANALYTICS_ENDPOINT=

# Stripe publishable key (safe for client-side)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# Optional beta switch: force all pricing CTAs to free onboarding/signup flow.
# Use while Stripe checkout is being validated with testers.
NEXT_PUBLIC_PRICING_BETA_FREE_CTA=false

# Optional auth UX switch: when true, force verify-email flows in UI.
# Set to false when Supabase confirm-email is temporarily disabled.
NEXT_PUBLIC_REQUIRE_EMAIL_VERIFICATION=true

# Optional docs host override used by dashboard scan links.
# Defaults to /docs when unset.
NEXT_PUBLIC_DOCS_BASE_URL=https://docs.skillgate.io
